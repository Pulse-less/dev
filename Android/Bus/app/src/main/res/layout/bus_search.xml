<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.bus.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#98e491">
        <ImageButton
            android:id="@+id/btnPrevious"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="5dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back_img"/>
        <ImageButton
            android:id="@+id/btnMain"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/home_img"/>

        <TextView
            android:id="@+id/route_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_below="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:gravity="center"
            android:textSize="15dp"
            android:text="버스정보"/>
        <TextView
            android:id="@+id/route_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:layout_below="@+id/route_info"
            android:gravity="center"
            android:textSize="25dp"
            android:text="버스번호"/>
        <TextView
            android:id="@+id/routeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:layout_below="@+id/route_nm"
            android:gravity="center"
            android:textSize="15dp"
            android:text="↔"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/busListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"></ListView>
</LinearLayout>