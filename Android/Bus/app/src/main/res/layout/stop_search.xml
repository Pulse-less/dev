<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.bus.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#98e491">
        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="백" />
        <Button
            android:id="@+id/btnMain"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="▲"/>
        <TextView
            android:id="@+id/mobile_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_below="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:gravity="center"
            android:textSize="15dp"
            android:text="정류소번호"/>
        <TextView
            android:id="@+id/station_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:layout_below="@+id/mobile_no"
            android:gravity="center"
            android:textSize="25dp"
            android:text="정류장 이름"/>
        <TextView
            android:id="@+id/routeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnPrevious"
            android:layout_toLeftOf="@+id/btnMain"
            android:layout_below="@+id/station_nm"
            android:gravity="center"
            android:textSize="15dp"
            android:text="↔"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/stopInfoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"></ListView>

</LinearLayout>